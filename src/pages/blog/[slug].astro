---
import Layout from "../../components/layouts/Layout.astro";
import Heading from "@/components/molecules/Heading";
import Picture from "@/components/atoms/Picture";
import SEO from "../../components/layouts/utils/SEO.astro";

import OG_IMAGE from "@/assets/images/layout/og/OG_IMAGE_LISTING_PROJECTS.jpg";
import { client } from "@/assets/scripts/utils/api/sanityClient";
import { getAllArticles } from "@/assets/scripts/utils/api/api";
import { PortableText } from "astro-portabletext";
import { createImageUrlBuilder } from "@sanity/image-url";
import { urlImageBuilder } from "@/assets/scripts/utils/api/urlBuilder";

export const getStaticPaths = async () => {
  // get all articles from sanity
  const articles = await client.fetch(getAllArticles());
  // get all articles
  return articles.map((article, index) => {
    const nextArticle = articles[index + 1] || articles[0];
    article.seoImage = urlImageBuilder(article?.seoImage?.asset?._ref);
    return {
      params: {
        slug: article?.seoSlug?.current,
      },
      props: { article, nextArticle },
    };
  });
};

const { slug } = Astro.params;
const { article, nextArticle }: { article: any; nextArticle: any } =
  Astro.props;
---

<SEO
  lang="en"
  title={article?.seoTitle}
  description={article?.seoDescription}
  ogImage={article?.seoImage}
>
  <Layout type="blog">
    <Heading client:load>
      <svg
        width="57"
        height="57"
        viewBox="0 0 57 57"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M21.9293 12.8376C21.7878 24.8768 31.6913 34.676 44 34.536H43.4341C31.4084 34.676 21.7878 44.4753 21.9293 56.3744V56.2344C21.7878 44.3353 12.0257 34.816 0.141478 34.676H0C12.0257 34.536 21.9293 24.8768 21.9293 12.8376Z"
          fill="white"></path>
        <path
          d="M43.9582 0C43.8746 7.11402 49.7267 12.9045 57 12.8218H56.6656C49.5595 12.9045 43.8746 18.695 43.9582 25.7263V25.6436C43.8746 18.6123 38.1061 12.9872 31.0836 12.9045H31C38.1061 12.8218 43.9582 7.11402 43.9582 0Z"
          fill="white"></path>
      </svg>
      <br />
      <h1
        class="do-text-xl"
        style={{
          maxWidth: "800px",
          margin: "0 auto",
        }}
      >
        {article?.title}
      </h1>
      <br />
      <div class="do-author-wrapper">
        <div
          style={{
            height: "48px",
            width: "48px",
          }}
        >
          <Picture
            client:load
            url={article?.author?.picture?.asset?._ref}
            widthDesktop={120}
            heightDesktop={120}
            widthMobile={48}
            heightMobile={48}
          />
        </div>

        <p>{article.author.name}</p>
      </div>
    </Heading>
    <div class="do-content">
      <PortableText value={article?.content} />
    </div>
    <div class="do-blog-footer">
      <a href={`/blog/${nextArticle.seoSlug.current}`}>
        <h4>Next</h4>
        <p>{nextArticle.title}</p></a
      >
    </div>
  </Layout>
</SEO>

<style lang="scss">
  .do-author-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;

    & > div {
      border-radius: 300px;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
    }
    picture {
      height: 48px;
      width: 48px;
      img {
        object-fit: cover;
      }
    }
  }
  .do-content {
    @include interpolate(
      padding,
      map-get($breakpoints, "tablet"),
      map-get($breakpoints, "desktop"),
      16px,
      64px
    );
    max-width: 800px;
    margin: auto;
    display: flex;
    flex-direction: column;

    // Headings hierarchy
    :global(h1) {
      @include interpolate(
        font-size,
        map-get($breakpoints, "tablet"),
        map-get($breakpoints, "desktop"),
        32px,
        48px
      );
      font-weight: 700;
      line-height: 1.2;
      margin-top: 4.8rem;
      margin-bottom: 1rem;
    }

    :global(h2) {
      @include interpolate(
        font-size,
        map-get($breakpoints, "tablet"),
        map-get($breakpoints, "desktop"),
        28px,
        40px
      );
      font-weight: 700;
      line-height: 1.3;
      margin-top: 4rem;
      margin-bottom: 0.8rem;
    }

    :global(h3) {
      @include interpolate(
        font-size,
        map-get($breakpoints, "tablet"),
        map-get($breakpoints, "desktop"),
        24px,
        32px
      );
      font-weight: 600;
      line-height: 1.4;
      margin-top: 3.2rem;
      margin-bottom: 0.6rem;
    }

    :global(h4) {
      @include interpolate(
        font-size,
        map-get($breakpoints, "tablet"),
        map-get($breakpoints, "desktop"),
        20px,
        24px
      );
      font-weight: 600;
      line-height: 1.5;
      margin-top: 2.4rem;
      margin-bottom: 0.5rem;
      text-align: left;
    }

    :global(h5) {
      @include interpolate(
        font-size,
        map-get($breakpoints, "tablet"),
        map-get($breakpoints, "desktop"),
        18px,
        20px
      );
      font-weight: 600;
      line-height: 1.5;
      margin-top: 2rem;
      margin-bottom: 0.4rem;
    }

    :global(h6) {
      @include interpolate(
        font-size,
        map-get($breakpoints, "tablet"),
        map-get($breakpoints, "desktop"),
        16px,
        18px
      );
      font-weight: 600;
      line-height: 1.5;
      margin-top: 1.6rem;
      margin-bottom: 0.4rem;
    }

    // Lists
    :global(ul, ol) {
      padding-left: 24px;
      margin-top: 0;
      margin-bottom: 1.6rem;

      :global(li) {
        margin-bottom: 0.8rem;
        @include interpolate(
          font-size,
          map-get($breakpoints, "tablet"),
          map-get($breakpoints, "desktop"),
          14px,
          18px
        );
        line-height: 1.6;
      }
    }

    :global(ul) {
      list-style: disc;
      margin-bottom: 1.6rem;
    }

    :global(ol) {
      list-style: decimal;
    }

    // Paragraphs and links
    :global(p) {
      color: white;
      line-height: 1.7;
      margin-bottom: 1.6rem;
      @include interpolate(
        font-size,
        map-get($breakpoints, "tablet"),
        map-get($breakpoints, "desktop"),
        14px,
        18px
      );

      :global(strong) {
        font-weight: 700;
      }

      :global(em) {
        font-style: italic;
      }
    }

    :global(a) {
      color: white;
      text-decoration: underline;
      text-underline-offset: 2px;
      transition: opacity 0.2s ease;

      &:hover {
        opacity: 0.7;
      }
    }

    // Code blocks and inline code
    :global(code) {
      background: rgba(255, 255, 255, 0.1);
      padding: 0.2rem 0.4rem;
      border-radius: 4px;
      font-size: 0.9em;
      font-family: "Monaco", "Courier New", monospace;
    }

    :global(pre) {
      background: rgba(255, 255, 255, 0.05);
      padding: 1.6rem;
      border-radius: 8px;
      overflow-x: auto;
      margin: 2rem 0;

      :global(code) {
        background: none;
        padding: 0;
      }
    }

    // Blockquotes
    :global(blockquote) {
      border-left: 4px solid rgba(255, 255, 255, 0.3);
      padding-left: 1.6rem;
      margin: 2.4rem 0;
      font-style: italic;
      opacity: 0.9;
    }

    // Images
    :global(img) {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
      margin: 2.4rem 0;
    }
  }

  .do-blog-footer {
    display: flex;
    justify-content: flex-end;

    max-width: 720px;
    margin: auto;
    a {
      text-decoration: none;
      color: inherit;
      display: flex;
      gap: 8px;
      flex-direction: column;
      align-items: flex-end;
    }
    @include interpolate(
      padding,
      map-get($breakpoints, "tablet"),
      map-get($breakpoints, "desktop"),
      16px,
      64px
    );
  }
</style>
